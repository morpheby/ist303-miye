<metal:main use-macro="master">
    <metal:slot fill-slot="title">
        <title>Check In/Out - ${config.APP_NAME}</title>
    </metal:slot>
    <metal:slot fill-slot="content">
        <h1 id="chio_title">Check In / Out</h1>
        <div id="check_ins">
            <h2>Check Ins</h2>
            <p tal:repeat="reservation check_ins">
                ${reservation.checkin}: ${reservation.client.fname} ${reservation.client.lname}
                &nbsp;
                <a href="${request.route_path('checkinout', 'in', reservation.ID)}">Check In</a>
                &nbsp;
                <a href="${request.route_path('checkinout', 'edit', reservation.ID)}">Edit</a>
                &nbsp;
                <a href="${request.route_path('checkinout', 'cancel', reservation.ID)}">Cancel</a>
            </p>
            <h2>Check Outs</h2>
            <p tal:repeat="reservation check_outs">
                ${reservation.checkout}: ${reservation.client.fname} ${reservation.client.lname}
                <a href="${request.route_path('checkinout', 'out', reservation.ID)}">Check Out</a>
            </p>
        </div>
    </metal:slot>
</metal:main>
